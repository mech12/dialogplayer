<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#000000"
    tools:context=".SecondaryActivity" >

    <Button
        android:id="@+id/button3"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_above="@+id/button4"
        android:layout_alignLeft="@+id/button2"
        android:text="Japanese Subtitle" />

    <Button
        android:id="@+id/button6"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_above="@+id/button7"
        android:layout_alignLeft="@+id/button5"
        android:text="Italian Subtitle" />

    <Button
        android:id="@+id/button5"
        android:layout_width="fill_parent"
       android:layout_height="40dp"
        android:layout_above="@+id/button6"
        android:layout_alignLeft="@+id/button4"
        android:text="Spanish Subtitle" />

    <Button
        android:id="@+id/button4"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_above="@+id/button5"
        android:layout_alignLeft="@+id/button3"
        android:text="English Subtitle" />

    <Button
        android:id="@+id/button2"
        android:layout_width="fill_parent"
       android:layout_height="40dp"
        android:layout_above="@+id/button3"
        android:layout_alignLeft="@+id/button1"
        android:text="French Subtitle" />

    <Button
        android:id="@+id/button7"
        android:layout_width="fill_parent"
      android:layout_height="40dp"
        android:layout_alignLeft="@+id/button6"
        android:layout_alignParentBottom="true"
        android:text="German Subtitle" />

    <Button
        android:id="@+id/button1"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="42dp"
        android:text="See Available Language " />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="#FFFFFF"
        android:text="Download Subtitles" />

</RelativeLayout>